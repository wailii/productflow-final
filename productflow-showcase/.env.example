# Runtime
NODE_ENV=development
PORT=3000

# Database (required in production)
DATABASE_URL=mysql://productflow:change-me@127.0.0.1:3306/productflow

# Session/JWT (required in production)
JWT_SECRET=change-me-to-a-long-random-secret

# OAuth (required in production)
VITE_APP_ID=
OAUTH_SERVER_URL=
VITE_OAUTH_PORTAL_URL=
OWNER_OPEN_ID=
OWNER_NAME=
# Enable built-in email register/login (recommended true)
ENABLE_LOCAL_AUTH=true
# Development only: set true to enable /api/oauth/dev-login fallback.
ENABLE_DEV_LOGIN=false

# LLM (required in production)
LLM_API_URL=https://api.moonshot.cn/v1
LLM_API_KEY=
LLM_MODEL=kimi-k2.5

# Compatibility for other built-in modules
BUILT_IN_FORGE_API_URL=https://api.moonshot.cn/v1
BUILT_IN_FORGE_API_KEY=
VITE_FRONTEND_FORGE_API_URL=
VITE_FRONTEND_FORGE_API_KEY=
