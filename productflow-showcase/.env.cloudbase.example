# CloudBase production template
NODE_ENV=production
PORT=3000
ENABLE_LOCAL_AUTH=true

# IMPORTANT:
# Set to a mounted persistent directory in CloudBase.
# Example: /mnt/cloudrun/productflow-data/pf-data
LOCAL_STORAGE_ROOT=/mnt/cloudrun/productflow-data/pf-data

# Generate securely, e.g. `openssl rand -base64 48`
JWT_SECRET=replace-with-random-secret

# OAuth placeholders (required by current runtime checks)
VITE_APP_ID=local-auth
OAUTH_SERVER_URL=https://example.com
VITE_OAUTH_PORTAL_URL=https://example.com

# Optional owner metadata
OWNER_OPEN_ID=
OWNER_NAME=

# Optional model defaults
BUILT_IN_FORGE_API_URL=https://api.moonshot.cn/v1
BUILT_IN_FORGE_API_KEY=placeholder

# Agent controls
AGENT_MAX_ITERATIONS=3
AGENT_PASS_SCORE=85

# Optional: if set and reachable, server uses MySQL instead of local json fallback.
DATABASE_URL=
